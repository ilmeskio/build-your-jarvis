{
  "name": "n8n-codespace",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "moby": true,
      "enableNonRootDocker": true
    }
  },
  "forwardPorts": [5678],
  "portsAttributes": {
    "5678": {
      "label": "n8n",
      "onAutoForward": "notify"
    }
  },
  "postAttachCommand": "./scripts/bootstrap.sh"
}
